<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D0D"
    android:keepScreenOn="true">

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <!-- 1. ÃœST BAR & DURUM -->
    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <ImageButton
        android:id="@+id/btnMenu"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="MenÃ¼"
        android:padding="12dp"
        android:src="@android:drawable/ic_menu_more"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#888888" />

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#22000000"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:text="ðŸŽ® Gamepad | HazÄ±r"
        android:textColor="#CCCCCC"
        android:textSize="13sp"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="@id/btnMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnMenu"
        app:layout_constraintTop_toTopOf="@id/btnMenu" />

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <!-- 2. TETÄ°K (TRIGGER/SHOULDER) BUTONLARI -->
    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->

    <!-- Sol Omuzlar -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnL2"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/trigger_button"
        android:text="L2"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnMenu" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnL1"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shoulder_button"
        android:text="L1"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@id/btnL2"
        app:layout_constraintTop_toBottomOf="@id/btnL2" />

    <!-- SaÄŸ Omuzlar -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnR2"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/trigger_button"
        android:text="R2"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnMenu" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnR1"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shoulder_button"
        android:text="R1"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@id/btnR2"
        app:layout_constraintTop_toBottomOf="@id/btnR2" />

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <!-- 3. ANA YERLEÅžÄ°M REHBERLERÄ° (GUIDELINES) -->
    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.40" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.60" />

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <!-- 4. SOL PANEL (D-PAD + SOL JOYSTICK) -->
    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/leftPanel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/controlBar"
        app:layout_constraintEnd_toStartOf="@id/guidelineLeft"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnL1">

        <!-- D-PAD -->
        <FrameLayout
            android:id="@+id/dpadContainer"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/btnDpadUp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="top|center_horizontal"
                android:background="@drawable/dpad_button"
                android:src="@drawable/ic_arrow_up"
                app:tint="#FFFFFF" />

            <ImageButton
                android:id="@+id/btnDpadDown"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|center_horizontal"
                android:background="@drawable/dpad_button"
                android:rotation="180"
                android:src="@drawable/ic_arrow_up"
                app:tint="#FFFFFF" />

            <ImageButton
                android:id="@+id/btnDpadLeft"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical|start"
                android:background="@drawable/dpad_button"
                android:rotation="270"
                android:src="@drawable/ic_arrow_up"
                app:tint="#FFFFFF" />

            <ImageButton
                android:id="@+id/btnDpadRight"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical|end"
                android:background="@drawable/dpad_button"
                android:rotation="90"
                android:src="@drawable/ic_arrow_up"
                app:tint="#FFFFFF" />

            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/dpad_center" />
        </FrameLayout>

        <!-- SOL JOYSTICK -->
        <FrameLayout
            android:id="@+id/joystickArea"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/joystick_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <View
                android:id="@+id/joystickThumb"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/joystick_thumb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="-12dp"
                android:text="L3"
                android:textColor="#55FFFFFF"
                android:textSize="10sp" />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <!-- 5. ORTA PANEL (SYSTEM BUTTONS) -->
    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <LinearLayout
        android:id="@+id/centerButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/controlBar"
        app:layout_constraintEnd_toStartOf="@id/guidelineRight"
        app:layout_constraintStart_toEndOf="@id/guidelineLeft"
        app:layout_constraintTop_toBottomOf="@id/btnR1"
        app:layout_constraintVertical_bias="0.8"> <!-- Biraz aÅŸaÄŸÄ±da dursun -->

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSelect"
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/small_button"
            android:text="SELECT"
            android:textColor="#AAAAAA"
            android:textSize="10sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnHome"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/home_button"
            android:text="âŒ‚"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnStart"
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/small_button"
            android:text="START"
            android:textColor="#AAAAAA"
            android:textSize="10sp" />
    </LinearLayout>

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <!-- 6. SAÄž PANEL (ABXY + SAÄž JOYSTICK) -->
    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rightPanel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/controlBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guidelineRight"
        app:layout_constraintTop_toBottomOf="@id/btnR1">

        <!-- ABXY BUTONLARI -->
        <FrameLayout
            android:id="@+id/abxyContainer"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnY"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="top|center_horizontal"
                android:background="@drawable/gamepad_button_yellow"
                android:text="Y"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnA"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="bottom|center_horizontal"
                android:background="@drawable/gamepad_button_green"
                android:text="A"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnX"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center_vertical|start"
                android:background="@drawable/gamepad_button_blue"
                android:text="X"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnB"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center_vertical|end"
                android:background="@drawable/gamepad_button_red"
                android:text="B"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />
        </FrameLayout>

        <!-- SAÄž JOYSTICK -->
        <FrameLayout
            android:id="@+id/rightJoystickArea"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/joystick_background_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <View
                android:id="@+id/rightJoystickThumb"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/joystick_thumb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="-14dp"
                android:text="R3"
                android:textColor="#55FFFFFF"
                android:textSize="10sp" />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <!-- 7. ALT KONTROL BARI -->
    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <HorizontalScrollView
        android:id="@+id/controlBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#DD111111"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnEditMode"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="âœï¸ Edit"
                android:textColor="#FFFFFF"
                android:textSize="11sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAdd"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="âž•"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDiscover"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="ðŸ”"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <Switch
                android:id="@+id/switchCenterTouch"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:checked="true"
                android:text="Center"
                android:textColor="#888888"
                android:textSize="9sp" />

            <Switch
                android:id="@+id/switchHaptic"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:checked="true"
                android:text="Haptic"
                android:textColor="#888888"
                android:textSize="9sp" />

            <Spinner
                android:id="@+id/spinnerPresets"
                android:layout_width="90dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/spinner_bg" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSavePreset"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="ðŸ’¾"
                android:textColor="#FFFFFF"
                android:textSize="11sp" />

            <!-- BoÅŸluk BÄ±rakÄ±cÄ± (Space) -->
            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtLinuxBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GNU/Linux ðŸ§"
                android:textStyle="bold"
                android:textColor="#FFD133"
                android:paddingHorizontal="8dp"
                android:textSize="12sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnChangeMode"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Joystick"
                android:textColor="#4FC3F7"
                android:textSize="12sp" />

        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>