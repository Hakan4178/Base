<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- ÃœST BAR -->
    <ImageButton
        android:id="@+id/btnMenu"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="MenÃ¼"
        android:padding="12dp"
        android:src="@android:drawable/ic_menu_more"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/purple_700" />

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#33000000"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:text="Gamepad Modu"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/btnMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnMenu"
        app:layout_constraintTop_toTopOf="@id/btnMenu" />

    <!-- JOYSTICK ALANI (Sol taraf) -->
    <FrameLayout
        android:id="@+id/joystickArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#22FF5722"
        app:layout_constraintBottom_toTopOf="@id/controlBar"
        app:layout_constraintEnd_toStartOf="@id/guidelineCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnMenu">

        <!-- Joystick gÃ¶rsel ipucu -->
        <View
            android:id="@+id/joystickVisual"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:background="@drawable/joystick_circle"
            android:alpha="0.4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="8dp"
            android:text="JOYSTICK"
            android:textColor="#55FFFFFF"
            android:textSize="10sp" />

    </FrameLayout>

    <!-- Orta Ã§izgi -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.45" />

    <!-- BUTONLAR ALANI (SaÄŸ taraf) -->
    <FrameLayout
        android:id="@+id/buttonsArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#11FFFFFF"
        app:layout_constraintBottom_toTopOf="@id/controlBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guidelineCenter"
        app:layout_constraintTop_toBottomOf="@id/btnMenu">

        <!-- A, B, X, Y ButonlarÄ± -->
        <Button
            android:id="@+id/btnA"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:background="@drawable/gamepad_button_green"
            android:text="A"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnB"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginStart="70dp"
            android:background="@drawable/gamepad_button_red"
            android:text="B"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnX"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginEnd="70dp"
            android:background="@drawable/gamepad_button_blue"
            android:text="X"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnY"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginBottom="60dp"
            android:background="@drawable/gamepad_button_yellow"
            android:text="Y"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Shoulder butonlarÄ± -->
        <Button
            android:id="@+id/btnL1"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_gravity="top|start"
            android:layout_margin="16dp"
            android:background="@drawable/shoulder_button"
            android:text="L1"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnR1"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_gravity="top|end"
            android:layout_margin="16dp"
            android:background="@drawable/shoulder_button"
            android:text="R1"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <!-- Start/Select -->
        <Button
            android:id="@+id/btnSelect"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_gravity="bottom|start"
            android:layout_margin="16dp"
            android:background="@drawable/small_button"
            android:text="SEL"
            android:textColor="#AAAAAA"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btnStart"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:background="@drawable/small_button"
            android:text="START"
            android:textColor="#AAAAAA"
            android:textSize="10sp" />

    </FrameLayout>

    <!-- ALT KONTROL BARI -->
    <HorizontalScrollView
        android:id="@+id/controlBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#CC000000"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp">

            <Button
                android:id="@+id/btnEditMode"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Edit"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnAdd"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Add"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnDiscover"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Discover"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <Switch
                android:id="@+id/switchCenterTouch"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:checked="true"
                android:text="Center"
                android:textColor="#AAAAAA"
                android:textSize="10sp" />

            <Switch
                android:id="@+id/switchHaptic"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:checked="true"
                android:text="Haptic"
                android:textColor="#AAAAAA"
                android:textSize="10sp" />

            <Spinner
                android:id="@+id/spinnerPresets"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="@android:drawable/btn_dropdown" />

            <Button
                android:id="@+id/btnSavePreset"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Save"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnChangeMode"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="ðŸ–±ï¸ Mouse"
                android:textSize="12sp" />

        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>