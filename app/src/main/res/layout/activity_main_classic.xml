        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@id/JoystickArea"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/btnDpadUp"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="top|center_horizontal"
            android:background="@drawable/dpad_button"
            android:src="@drawable/ic_arrow_up"
            app:tint="#FFFFFF" />

        <ImageButton
            android:id="@+id/btnDpadDown"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@drawable/dpad_button"
            android:rotation="180"
            android:src="@drawable/ic_arrow_up"
            app:tint="#FFFFFF" />

        <ImageButton
            android:id="@+id/btnDpadLeft"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical|start"
            android:background="@drawable/dpad_button"
            android:rotation="270"
            android:src="@drawable/ic_arrow_up"
            app:tint="#FFFFFF" />

        <ImageButton
            android:id="@+id/btnDpadRight"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical|end"
            android:background="@drawable/dpad_button"
            android:rotation="90"
            android:src="@drawable/ic_arrow_up"
            app:tint="#FFFFFF" />

        <View
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:background="@drawable/dpad_center" />
    </FrameLayout>

